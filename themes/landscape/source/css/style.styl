@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  @media mq-normal
    width: 1068px
    margin: 0 auto
    padding: 0 20px
  @media mq-small-pc
    width: 708px
    margin: 0 auto
    padding: 0 20px

.inner
  @media mq-normal
    display: inline
    float: left
    width: 1068px
    margin: 0 10px
  @media mq-small-pc
    display: inline
    float: left
    width: 708px
    margin: 0 10px

.side-big-banner
  @media mq-normal
    display: inline
  @media mq-small-pc
    display: none
  @media mq-tablet
    display: none
  @media mq-mobile
    display: none

.side-small-banner
  @media mq-normal
    display: none
  @media mq-small-pc
    display: inline
  @media mq-tablet
    display: none
  @media mq-mobile
    display: none

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      display: inline
      float: left
      width: 728px
      margin: 0 10px
    @media mq-small-pc
      display: inline
      float: left
      width: 468px
      margin: 0 10px
  .long-banner
    @media mq-small-pc
      display: none
    @media mq-tablet
      display: none
    @media mq-mobile
      display: none
  .pc-banner
    @media mq-normal
      display: none
    @media mq-tablet
      display: none
    @media mq-mobile
      display: none
  .tablet-banner
    @media mq-normal
      display: none
    @media mq-small-pc
      display: none

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"